   props: {
    password: 'xxxxxxxx',
  }
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="stylesheet" href="../../../index.pcss" />
    <link rel="stylesheet" href="./passwordSettings.pcss" />
    <title>Profile</title>
  </head>
  <body>
    <main class="page-wrapper profile">
      {{#extend "settingsContainer/settingsContainer"}}
        {{#content "settings"}}
          {{> avatar/avatar src="../../../static/icons/file.svg"}}
          <div class="password-settings_inputs">     
            {{>settingsInput/settingsInput id="password_setup_1" type="password" label="Старый пароль" placeholder='Введите пароль' value=props.password }}
            {{>settingsInput/settingsInput id="password_setup_2" type="password" label="Новый пароль" placeholder='Введите пароль' }}
            {{>settingsInput/settingsInput id="password_setup_3" type="password" label="Повторите новый пароль" placeholder='Введите пароль'}}
          </div>
          {{> buttonBase/buttonBase label='Сохранить'}}
        {{/content}}
      {{/extend}}
    </main>
  </body>
</html>