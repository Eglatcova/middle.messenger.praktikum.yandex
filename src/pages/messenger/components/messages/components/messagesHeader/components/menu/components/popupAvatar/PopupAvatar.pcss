@import "./components/form/form.pcss";

.avatar_popup-wrapper {
  position: fixed;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.4);
}

.avatar_popup-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 64px;
  background-color: white;
  width: 340px;
  border-radius: 12px;
  padding: 16px;
}
