.chat_form {
  width: 100%;
  height: 100%;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 10px;
}

.chat_form-input {
  flex-grow: 1;
  height: 32px;
  border-radius: 30px;
  background: var(--greyLight);
  border: none;
  outline: none;
  padding: 0 8px;
}

.chat_form-button {
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  background: var(--blue);
  border-radius: 50%;
}
