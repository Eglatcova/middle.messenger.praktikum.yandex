.login_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 350px;
  height: 450px;
  padding: 50px 0 18px 0;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.14);
  border-radius: 12px;
}

.login_form {
  margin-top: 40px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.login_buttons {
  display: flex;
  flex-direction: column;
}

.login_link-wrapper {
  display: flex;
  justify-content: center;
  padding: 12px 0;
}
